doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='http://localhost:3000/socket.io/socket.io.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    title#title Document
    style
      include style.css
    script
      include Chat.js
  body#body
    h1.hero-title Sıgn In
    form#SignInForm
      table.table
        tbody
          tr
            td
              input#username(type='text', autocomplete='off')
            td Kullanıcı adınız ?
          tr
            td
              input#password(type='password', autocomplete='off')
            td Şifreniz ?
      input#Buton(type='submit')
    .messages
      .WRONG_USERNAME Kullanıcı adınızı girmediniz !
      .WRONG_PASSWORD Şifrenizi girmediniz !
      .WAIT-1 Doğrulanıyor.
      .WAIT-2 Doğrulanıyor..
      .WAIT-3 Doğrulanıyor...
      .WRONG_ACCOUNT Kullanıcı adı veya şifreniz hatalı
    .CHAT
      .heroChat
        .countsChat
          .onlineCountsChat
            // Online People
        .messages-sizeChat
          // Messages
        .inputChat
          form#formChat
            input#message_inputChat(type='text', size='95px', autocomplete='off')
            input#butonChat(type='submit')